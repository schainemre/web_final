
@{
    ViewData["Title"] = "İletisim";
}

<html>
<head>
    <style>
        .orta {
            width: 500px;
            height: 700px;
        }

        .form-group {
            width: auto;
            height: auto;
        }

        .form-control {
            width: auto;
            height: auto;
        }

        .form-textarea {
            width: 500px;
            height: 175px;
            resize: none;
        }
    </style>

</head>
<body>
    <div style="width:900px;height:800px;">
        <h1>Bizimle İletişime Geçin </h1>

        <div class="orta">
            <form action="" autocomplete="on">
                <div class="form-group">
                    <label>Ad *</label>
                    <input type="text" name="name" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <label>Soyad *</label>
                    <input type="text" name="lastname" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <label>Email *</label>
                    <input type="email" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    <input type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label>Konu *</label>
                    <input type="text" name="subject" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <label>Mesaj *</label>
                    <textarea name="message" id="message" required="required" class="form-textarea"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" name="submit" class="" required="required">Mesajı Gönder</button>
                </div>
            </form>
        </div>
    </div>
</body>


</html>

